<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageLogoKurikulum"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margintext_top"
        android:src="@drawable/ic_kurikulum_gold"
        />

    <TextView
        android:id="@+id/judulteksKurikulum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kurikulum 2013"
        android:textSize="24sp"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/imageLogoKurikulum" />

    <ProgressBar
        android:id="@+id/progressBarKurikulum"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/judulteksKurikulum"
        android:layout_margin="5dp"
        >
    <WebView
        android:id="@+id/webviewKuriklum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></WebView>
    </ScrollView>
</RelativeLayout>