<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/judulteksKompetensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kompetensi"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/margintext_top"
        android:layout_alignParentTop="true"/>
    <ProgressBar
        android:id="@+id/progressBarKompetensi"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margintext_top"
        android:layout_marginRight="@dimen/margintext_top"
        android:layout_below="@id/judulteksKompetensi"
        android:layout_alignStart="@id/judulteksKompetensi"
        >

        <WebView
            android:id="@+id/isikompetensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</RelativeLayout>