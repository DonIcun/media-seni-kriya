<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/foto"
        android:src="@drawable/profil2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margintext_top"/>

        <!--TextView
            android:id="@+id/tekstentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margintext_top"
            android:layout_marginRight="@dimen/margintext_top"
            android:layout_marginTop="@dimen/margintext_top"
            android:padding="10dp"
            android:text="teks tentang"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@color/bgWhiteColor"/ -->
    <ProgressBar
        android:id="@+id/progressBarTentang"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/foto"
        android:background="#f5f5f6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <WebView
            android:id="@+id/webviewtentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:scrollbars="none"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>